
        <div class="item">
            <div>Avatar Url</div>
            <div>
                <input 
                    required
                    type="url" 
                    name="avatar_url" 
                    placeholder="http://"
                    value="{{student.avatar_url}}">
            </div>
        </div>

        <div class="item">
            <div>Nome</div>
            <div>
                <input 
                    required
                    type="text" 
                    name="name" 
                    placeholder="Nome do aluno"
                    value="{{student.name}}">
                
            </div>
        </div>
        <div class="item">
            <div>Email</div>
            <div>
                <input 
                    required
                    type="email" 
                    name="email" 
                    value="{{student.email}}">
                
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    required
                    type="date" 
                    name="birth_date"
                    value="{{student.birth_date}}"
                    >
            </div>
        </div>

        <div class="item">
            <div>Ano escolar</div>
            <div>
                <select name="school_year">
                    <option 
                        value="5EF" 
                        {% if student.school_year == "5EF" %}
                            selected
                        {% endif %}>
                        5º Ano do fundamental
                    </option> 
                    <option 
                        value="6EF"{% if student.school_year == "6EF" %}
                            selected
                        {% endif %}>
                        6º Ano do fundamental
                    </option>
                    <option  
                        value="7EF" {% if student.school_year == "7EF" %}
                            selected
                        {% endif %}>
                        7º Ano do fundamental
                    </option><option 
                        value="8EF" 
                        {% if student.school_year == "8EF" %}
                            selected
                        {% endif %}>
                        8º Ano do fundamental
                    </option> 
                    <option 
                        value="9EF"{% if student.school_year == "9EF" %}
                            selected
                        {% endif %}>
                        9º Ano do fundamental
                    </option>
                    <option  
                        value="1EM" {% if student.school_year == "1EM" %}
                            selected
                        {% endif %}>
                        1º Ano do ensino médio
                    </option>
                    <option  
                        value="2EM" {% if student.school_year == "2EM" %}
                            selected
                        {% endif %}>
                        2º Ano do ensino médio
                    </option>
                    <option  
                        value="3EM" {% if student.school_year == "3EM" %}
                            selected
                        {% endif %}>
                        3º Ano do ensino médio
                    </option>
                </select>
            </div>
        </div>
        <div class="item">
            <div>Carga horária semanal</div>
            <div>
                <input 
                    required
                    type="number" 
                    name="workload"
                    value="{{student.workload}}"
                    placeholder="0"
                    >
            </div>
        </div>
<div class="item">
            <div>Professor</div>
            <div>
                <select name="teacher">
                    {% for teacher in teacherOptions %}
                        <option 
                            value="{{teacher.id}}" 
                            {% if student.teacher_id == teacher.id %}
                                selected
                            {% endif %}>
                            {{teacher.name}}
                        </option> 
                    {% endfor %}
                </select>
            </div>
        </div>
        
       