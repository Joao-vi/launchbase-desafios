{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <div class="header">
        <a  href="/students/create">Novo</a>

        <form action="/students" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Nome ou Email"
                value="{{filter}}"
            >
            <button type="submit"> Filtrar </button>
        </form>

    </div>
   <table>
       <thead>
           <tr>
               <th>Estudantes</th>
               <th>Email</th>
               <th>Ano escolar</th>
               <th>Ação</th>
           </tr>
       </thead>
       <tbody>
            {% for student in students %}
                <tr>
                    <td>
                        <div>
                            <span 
                                style="background-image: url({{student.avatar_url}})">
                            </span>
                            {{student.name}}
                        </div>
                    </td>
                    <td > 
                        {{student.email}}
                    </td>
                    <td class="school-year"> 
                        {{student.school_year}}
                    </td>
                    <td>
                        <a href="/students/{{student.id}}">ver</a>
                    </td>
                </tr>
           {% endfor%}
       </tbody>
   </table>
    <div class="pagination"
        data-page= {{pagination.page}}
        data-total = {{pagination.total}}
        data-filter = {{filter}}
        >
   </div>
</div>
{% endblock content %}
