{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
   <table>
       <thead>
           <tr>
               <th>Teacher</th>
               <th>Classes</th>
               <th>Action</th>
           </tr>
       </thead>
       <tbody>
            {% for teacher in teachers %}
                <tr>
                    <td>
                        <div>
                            <span 
                                style="background-image: url({{teacher.avatar_url}})">
                            </span>
                            {{teacher.name}}
                        </div>
                    </td>
                    <td> 
                        <div>

                        {% for service in teacher.services %}
                            <span class="span-classes">{{service}}</span>
                        {% endfor %}
                        </div>
                    </td>
                    <td>
                        <a href="/teachers/{{teacher.id}}">ver</a>
                    </td>
                </tr>
           {% endfor%}
       </tbody>
   </table>
</div>
{% endblock content %}
